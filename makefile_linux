objects = test.o dict.o counter.o beidanci_linux.o user.o

test : $(objects)
	g++ -o test $(objects) -std=c++11 -fexec-charset=GBK -finput-charset=GBK

test.o : test.cpp beidanci.h counter.h dict.h word.h
	g++ -c test.cpp -std=c++11 -fexec-charset=GBK -finput-charset=GBK

dict.o : dict.cpp dict.h word.h
	g++ -c dict.cpp -std=c++11 -fexec-charset=GBK -finput-charset=GBK

counter.o : counter.cpp counter.h dict.h word.h
	g++ -c counter.cpp -std=c++11 -fexec-charset=GBK -finput-charset=GBK

beidanci_linux.o : beidanci.h beidanci_linux.cpp counter.h dict.h word.h
	g++ -c beidanci_linux.cpp -std=c++11 -fexec-charset=GBK -finput-charset=GBK
user.o : user.h user.cpp dict.h history.h
	g++ -c user.cpp -std=c++11 -fexec-charset=GBK -finput-charset=GBK

.PHONY : clean
clean : 
	rm $(objects)